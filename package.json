{
  "name": "protest-scraper",
  "version": "1.0.0",
  "description": "A collaborative open-source service to collect and share upcoming protests and demonstrations across Germany",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node dist/server.js",
    "scrape": "tsx src/scraper/scrape-protests.ts",
    "scrape:prod": "node dist/scraper/scrape-protests.js",
    "import": "tsx src/scraper/import-to-db.ts",
    "import:prod": "node dist/scraper/import-to-db.js",
    "set-role": "tsx src/scripts/set-user-role.ts",
    "set-role:prod": "node dist/scripts/set-user-role.js",
    "test": "vitest run test/unit test/integration",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:e2e": "vitest run test/e2e",
    "test:all": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run test/unit test/integration --coverage"
  },
  "keywords": [
    "protest",
    "scraper",
    "germany",
    "demonstrations"
  ],
  "author": "Artem Schander",
  "license": "AGPL-3.0",
  "dependencies": {
    "arctic": "^3.7.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "cheerio": "^1.0.0",
    "commander": "^12.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "ics": "^3.8.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.12.0",
    "nodemailer": "^7.0.9",
    "robots-parser": "^3.0.1",
    "ws": "^8.18.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cheerio": "^0.22.35",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^7.0.2",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "3.2.4",
    "axios-mock-adapter": "^2.1.0",
    "mongodb-memory-server": "^10.2.3",
    "supertest": "^7.1.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
